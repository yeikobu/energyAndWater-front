---
const { title, description, imgURL } = Astro.props;
---
<div class="flex md:flex-row flex-col gap-2 m-8 items-center sm:items-start lg:w-[400px]">
    <img src=`${imgURL}` alt=`Imagen del servicio ${title}` class="w-40 h-72 object-cover rounded-lg">
    <div class="w-full ml-2 sm:space-y-4 text-center sm:text-start">
        <h2 id="serviceTitle" class="text-stone-200 text-lg font-bold">{title}</h2>
        <p class="text-stone-400 text-sm max-w-[300px]">{description}</p>
        <input type="button" id="btnCotizar" value="Cotizar" class="bg-red-600/40 shadow-md shadow-black text-stone-300 mt-4 rounded-full inline-flex justify-center items-center gap-x-2 py-2 px-4 md:py-2 md:px-4 text-sm md:text-base transition font-bold  hover:scale-110 hover:bg-red-600/60 cursor-pointer">
    </div>
</div>

<script>
    import { isContctUsFormOpen, selectedService } from "../store"
    const btnCotizar = document.getElementById('btnCotizar')
    const serviceTitle = document.getElementById('serviceTitle').textContent

    const setSelectedService = () => { 
        selectedService.set(serviceTitle)
        isContctUsFormOpen.set(true)
    }

    btnCotizar.addEventListener('click', setSelectedService)
</script>