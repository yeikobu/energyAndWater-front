---
import HamburgerMenuIcon from "../../public/icons/HamburgerMenuIcon.astro"
---

<header class="bg-slate-950/0 md:bg-slate-950/20 sticky md:backdrop-blur-md md:shadow-sm shadow-black top-0 left-0 right-0 w-full z-20">
    <nav class="flex flex-row justify-between items-center py-2 text-center h-16 px-4">
      <!-- Logo dentro de un a href para que cuando se presione, se pueda volver a la página principal -->
        <a class="px-1 items-center justify-center" href="/">
            <img src="/logo.jpeg" alt="Logo de Energy and water" class="md:size-12 size-10 rounded-full" />
        </a>
        <!-- Menú de hamburguesa para dispositivos pequeños -->
        <div class="md:hidden flex items-center">
            <button id="showMenuButton" class="text-stone-300 hover:bg-red-600/20 transition focus:outline-none">
                <HamburgerMenuIcon class="size-8"/>
            </button>
        </div>
      <!-- Enlaces -->
        <div class="hidden md:flex md:flex-row flex-col space-x-4 justify-center items-center">
            <a href="/" class="bg-slate-900/10 hover:bg-red-600/20 backdrop-blur-sm text-stone-300 rounded-lg inline-flex justify-center items-center gap-x-2 py-2 px-4 md:py-2 md:px-4 text-sm md:text-base transition font-bold hover:scale-110 cursor-pointer">
                Inicio
            </a>
            <a href="/history.astro" class="bg-slate-900/10 hover:bg-red-600/20 backdrop-blur-sm text-stone-300 rounded-lg inline-flex justify-center items-center gap-x-2 py-2 px-4 md:py-2 md:px-4 text-sm md:text-base transition font-bold hover:scale-110 cursor-pointer">
                Historia
            </a>
            <a href="/equip.astro" class="bg-slate-900/10 hover:bg-red-600/20 backdrop-blur-sm text-stone-300 rounded-lg inline-flex justify-center items-center gap-x-2 py-2 px-4 md:py-2 md:px-4 text-sm md:text-base transition font-bold hover:scale-110 cursor-pointer">
                Equipo
            </a>
            <a href="/faq.astro" class="bg-slate-900/10 hover:bg-red-600/20 backdrop-blur-sm text-stone-300 rounded-lg inline-flex justify-center items-center gap-x-2 py-2 px-4 md:py-2 md:px-4 text-sm md:text-base transition font-bold hover:scale-110 cursor-pointer">
                Preguntas frecuentes
            </a>
        </div>
    </nav>
</header>


<script> 
    import { showNavMenu } from "../store"
    const showMenuButton = document.getElementById('showMenuButton')

    const showSideMenu = () => { 
        showNavMenu.set(true)
    }

    showMenuButton.addEventListener('click', showSideMenu)
</script>